#!/usr/bin/env bash
# Configures Nginx to run as the nginx user and listen on port 8080

# Make sure nginx user exists
id nginx &>/dev/null || useradd --system --no-create-home --shell /usr/sbin/nologin nginx

# Ensure user nginx is set
if grep -q '^user' /etc/nginx/nginx.conf; then
    sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf
else
    sed -i '1iuser nginx;' /etc/nginx/nginx.conf
fi

# Change all listen 80 to listen 8080
find /etc/nginx -type f -exec sed -i 's/listen 80 default_server;/listen 8080 default_server;/g' {} +
find /etc/nginx -type f -exec sed -i 's/listen 80;/listen 8080;/g' {} +

# Restart nginx
service nginx restart

# Confirm and output running processes to required files
ps aux | grep '[n]ginx' > /tmp/output
ps aux | grep '[n]ginx' > /tmp/1596_output
