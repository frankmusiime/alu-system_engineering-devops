#!/usr/bin/env bash
# Configure Nginx to run as the nginx user and listen on port 8080

# Set Nginx to run as nginx user
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf

# Change port to 8080 in default config
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server;/listen [::]:8080 default_server;/' /etc/nginx/sites-available/default

# Kill and restart nginx manually
pkill nginx
nginx

# Output processes and ports to checker location
ps aux | grep '[n]ginx' > /tmp/correction/output
netstat -tuln | grep ':8080' >> /tmp/correction/output

