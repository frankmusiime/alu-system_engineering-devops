#!/usr/bin/env bash
# Install and configure HAProxy on lb-01 to load balance between web-01 and web-02

# Update packages and install HAProxy
sudo apt-get update -y
sudo apt-get install -y haproxy

# Enable HAProxy via init script
sudo sed -i 's/^ENABLED=.*/ENABLED=1/' /etc/default/haproxy

# Backup original config
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Overwrite HAProxy config with our custom load balancer setup
cat <<EOF | sudo tee /etc/haproxy/haproxy.cfg > /dev/null
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000
    option forwardfor
    option http-server-close

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web1 6601-web-01:80 check
    server web2 6601-web-02:80 check
EOF

# Restart HAProxy to apply changes
sudo service haproxy restart
